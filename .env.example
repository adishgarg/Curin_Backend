# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/curin

# Database Authentication (for production)
MONGODB_USERNAME=your_db_username
MONGODB_PASSWORD=your_secure_password
MONGODB_AUTH_DB=admin

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# JWT Configuration
JWT_SECRET=your-very-long-random-secret-key-here-at-least-64-characters-long
JWT_EXPIRE=4d

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Google Drive Configuration
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=./config/google-service-account.json

# Google OAuth Configuration (for personal Google Drive access)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_REFRESH_TOKEN=your-google-refresh-token
